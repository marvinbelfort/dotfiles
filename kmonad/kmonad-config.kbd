(defcfg
  input  (device-file "/dev/input/by-id/usb-Corsair_Corsair_STRAFE_RGB_Gaming_Keyboard_01019033AEBE080156305C6EF5001943-event-kbd")
  output (uinput-sink "My KMonad output" "/run/current-system/sw/bin/sleep 1 && /run/current-system/sw/bin/setxkbmap -option compose:ralt")
  cmp-seq ralt    ;; Set the compose key to `RightAlt'
  cmp-seq-delay 5 ;; 5ms delay between each compose-key sequence press

  ;; Comment this if you want unhandled events not to be emitted
  fallthrough true

  ;; Set this to false to disable any command-execution in KMonad
  allow-cmd true
)

(defsrc
  esc  f1   f2   f3   f4   f5   f6   f7   f8   f9   f10  f11  f12        prnt slck pause
  apo  1    2    3    4    5    6    7    8    9    0    -    =    bspc  ins  home pgup  nlck kp/  kp*  kp-
  tab  q    w    e    r    t    y    u    i    o    p    grv  [    ret   del  end  pgdn  kp7  kp8  kp9  kp+
  caps a    s    d    f    g    h    j    k    l    ;    '    ]                          kp4  kp5  kp6
  lsft \    z    x    c    v    b    n    m    ,    .    ;    /    rsft        up        kp1  kp2  kp3  kprt
  lctl lmet lalt           spc                 ralt rmet menu rctl       left down rght  kp0  kp.
)

(defalias
    ç ;
    meta (tap-hold-next-release 250 a lmet)
    alts (tap-hold-next-release 250 s lalt)
    ctld (tap-hold-next-release 250 d lctl)
    sftf (tap-hold-next-release 250 f lsft)

    sftj (tap-hold-next-release 250 j rsft)
    ctlk (tap-hold-next-release 250 k rctl)
    altl (tap-hold-next-release 250 l lalt)
    metç (tap-hold-next-release 250 @ç rmet)
    ces (tap-hold 250 esc lctl)
)

(deflayer qwerty
  esc  f1   f2   f3   f4   f5   f6   f7   f8   f9   f10  f11  f12        prnt slck pause
  apo  1    2    3    4    5    6    7    8    9    0    -    =    bspc  ins  home pgup  nlck kp/  kp*  kp-
  tab  q    w    e    r    t    y    u    i    o    p    grv  [    ret   del  end  pgdn  kp7  kp8  kp9  kp+
  @ces @meta    @alts    @ctld    @sftf g    h    @sftj @ctlk @altl @metç    ~    ]                          kp4  kp5  kp6
  lsft \    z    x    c    v    b    n    m    ,    .    ;    /    rsft        up        kp1  kp2  kp3  kprt
  lctl lmet lalt           spc                 ralt rmet menu rctl       left down rght  kp0  kp.
)

